  },
  "devDependencies": {
    "eslint": "^8.8.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1"
  },
  "lint-staged": {
    "**/*.{css,html,js,json,md,xml,yaml,yml}": [
      "prettier --write"
    ],
    "**/*.js": [
      "eslint"
    ]
  }
